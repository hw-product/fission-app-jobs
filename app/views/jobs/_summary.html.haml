- if content_for?(:pagination)
  %div.fission-pagination.well.well-sm= content_for(:pagination)
%table.table.table-hover#log-display
  %thead
    %tr
      %th.col-md-3
        Message ID
      %th.col-md-4
        Timestamp
      %th.col-md-2
        Account
      %th.col-md-2
        Job Name
      %th.col-md-2
        Status
      %th.col-md-1
        Progress
  %tbody
    - jobs.each do |job|
      %tr
        %td= job.message_id
        %td= job.created_at
        %td= job.account.name
        %td= job.payload[:job]
        %td= job.status
        %td= "#{job.percent_complete}%"
- if content_for?(:pagination)
  %div.fission-pagination.well.well-sm= content_for(:pagination)
